<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pureAllLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pureTtitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.6">

        <ImageButton
            android:id="@+id/pureBackUpImageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/backup" />

        <TextView
            android:id="@+id/pureTitleBarTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:gravity="center"
            android:text="@string/h5_titleBar_title" />

    </RelativeLayout>

    <WebView
        android:id="@+id/pureWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9.4" />

</LinearLayout>